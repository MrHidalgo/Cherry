	.c-grid
		.footer__wrapper.footer__wrapper-1

			.footer__slider
				mixin swiperContent()
					.swiper-slide
						p.footer__title.c-title “Recognize the increasing shift to digital commerce.”
					.swiper-slide
						p.footer__title.c-title “Time to rethink on age-old card reward programs.”
					.swiper-slide
						p.footer__title.c-title “Increases your payment volume.”
					.swiper-slide
						p.footer__title.c-title “Compete with premium rewards cards.”
					.swiper-slide
						p.footer__title.c-title “Offer smart rewards at the point of sales, right when they check out.”
					.swiper-slide
						p.footer__title.c-title “Enhance your brand image as a leader in fintech innovation.”

